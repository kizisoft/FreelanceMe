@helper Create(string title, string message)
{
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <div class="alert alert-dismissable alert-warning">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <h4>@title!</h4>
                <p>@message</p>
            </div>
        </div>
    </div>
}